pragma solidity ^0.8.7;	


contract Operadores{

    uint256 valor;

    // Calculando a Média de duas Variáveis
    function calcularMedia(uint256 a, uint256 b) public pure returns(uint256){
        uint256 media = (a+b)/2;
        return media;
    }

    function calcularDivisao(uint256 a, uint256 b) public pure returns (uint256){
        uint256 divisao = a/b;
        return divisao;
    }


    // Calculando a Multiplicação de duas Variáveis
    function calcularMult(uint256 a, uint256 b) public pure returns(uint256){
        uint256 mult = a*b;
        return mult;
    }
    
    // Verificando se duas Variáveis são diferentes
    function verifica(uint256 a, uint256 b) public pure returns(bool){
        bool resultado = a != b;
        return resultado;        
        
    }


}